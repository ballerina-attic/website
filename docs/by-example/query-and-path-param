        <span class="nx">methods</span><span class="p">:[</span><span class="s">&quot;GET&quot;</span><span class="p">],</span>
        <span class="nx">path</span><span class="p">:</span><span class="s">&quot;/path/{foo}&quot;</span>
    <span class="p">}</span>
    <span class="kd">resource</span> <span class="nx">params</span> <span class="p">(</span><span class="nx">http</span><span class="p">:</span><span class="nx">Request</span> <span class="nx">req</span><span class="p">,</span> <span class="nx">http</span><span class="p">:</span><span class="nx">Response</span> <span class="nx">res</span><span class="p">,</span> <span class="kt">string</span> <span class="nx">foo</span><span class="p">)</span> <span class="p">{</span>
        <span class="kt">map</span> <span class="nx">params</span> <span class="p">=</span> <span class="nx">req</span><span class="p">.</span><span class="nx">getQueryParams</span><span class="p">();</span>
        <span class="k">var</span> <span class="nx">bar</span><span class="p">,</span> <span class="nx">_</span> <span class="p">=</span> <span class="p">(</span><span class="kt">string</span><span class="p">)</span><span class="nx">params</span><span class="p">.</span><span class="nx">bar</span><span class="p">;</span>
        <span class="kt">json</span> <span class="nx">responseJson</span> <span class="p">=</span> <span class="p">{</span><span class="s">&quot;queryParam&quot;</span><span class="p">:</span><span class="nx">bar</span><span class="p">,</span> <span class="s">&quot;pathParam&quot;</span><span class="p">:</span><span class="nx">foo</span><span class="p">};</span>
        <span class="nx">res</span><span class="p">.</span><span class="nx">setJsonPayload</span><span class="p">(</span><span class="nx">responseJson</span><span class="p">);</span>
